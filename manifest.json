{
  "manifest_version": 2,
  "name": "Easy Comments",
  "version": "1.1",
  "description": "Smart key tool for comments in Liferay workflow",
  "icons": {
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "38": "images/icon38.png"
    },
    "default_title": "Easy Comments",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions":[
    "storage","tabs" ,"http://*/", "https://*/"
  ],
  "content_scripts": [
    {
      "matches":["*://issues.liferay.com/browse/*"],
      "js":["js/lib/jquery-2.1.4.min.js","js/lib/jquery-selection.js"]
    },
    {
      "matches": ["*://issues.liferay.com/browse/LRQA-*","*://issues.liferay.com/browse/BPR-*"],
      "js": ["js/content_scripts/smart_key_LRQA.js"]
    },
    {
      "matches":["*://issues.liferay.com/browse/LPS-*"],
      "js":["js/content_scripts/smart_key_LPS.js"]
    }
  ]

}